<Page
    x:Class="OwncloudUniversal.UI.FolderMapping"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/200">
    <Page.BottomAppBar>
        <CommandBar>
            <CommandBar.Content>
                <Grid/>
            </CommandBar.Content>
            <AppBarButton Label="appbarbutton" Click="AppBarButton_Click" Icon="Delete"/>
        </CommandBar>
    </Page.BottomAppBar>

    <Grid>
        <ListView x:Name="listView" Margin="10" ItemsSource="{Binding Mode=OneTime}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding RemoteFolderFolderPath}"/>
                        <TextBlock Text="{Binding LocalFolderPath}" Margin="20,0,0,0" FontStyle="Italic"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
